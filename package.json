{
  "name": "emr-tools-v2",
  "displayName": "emr-tools",
  "description": "The extension for developers building applications to run in EMR clusters.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:emr-tools-v2.helloWorld",
    "onView:emrExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emr-tools-v2.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "emr-tools-v2.deploy",
        "title": "EMR: Run Code"
      },
      {
        "command": "emr-tools-v2.refreshEntry",
        "title": "EMR: Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "emr-tools-v2.refreshContainerEntry",
        "title": "EMR Containers: Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "emr-tools-v2.refreshServerlessEntry",
        "title": "EMR Serverless: Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "emr-tools-v2.connectToCluster",
        "title": "Connect to EMR Cluster",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "emr-tools-v2.filterClusters",
        "title": "Include Cluster States"
      }
    ],
    "views": {
      "emr-explorer": [
        {
          "id": "emrExplorer",
          "name": "EMR Explorer"
        },
        {
          "id": "emrContainersExplorer",
          "name": "EMR Containers"
        },
        {
          "id": "emrServerlessExplorer",
          "name": "EMR Serverless"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "emr-tools-v2.refreshEntry",
          "when": "view == emrExplorer",
          "group": "navigation"
        },
        {
          "command": "emr-tools-v2.refreshContainerEntry",
          "when": "view == emrContainersExplorer",
          "group": "navigation"
        },
        {
          "command": "emr-tools-v2.refreshServerlessEntry",
          "when": "view == emrServerlessExplorer",
          "group": "navigation"
        },
        {
          "command": "emr-tools-v2.filterClusters",
          "when": "view == emrExplorer"
        }
      ],
      "view/item/context": [
        {
          "command": "emr-tools-v2.connectToCluster",
          "when": "view == emrExplorer && viewItem == EMRCluster",
          "group": "inline@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "emr-explorer",
          "title": "Amazon EMR",
          "icon": "media/emr.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@aws-sdk/client-emr": "3.30.0",
    "@aws-sdk/client-emr-containers": "3.30.0",
    "@aws-sdk/client-ssm": "^3.95.0",
    "@aws-sdk/client-emr-serverless": "3.105.0"
  }
}
